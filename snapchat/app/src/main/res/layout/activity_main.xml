<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.general.mediaplayer.snapchat.MainActivity">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/home_small1" />

    <Button
        android:id="@+id/button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        app:layout_constraintLeft_toLeftOf="@+id/localvertical_guideline"
        app:layout_constraintTop_toTopOf="@+id/localhorizontal_guideline"
        app:layout_constraintRight_toRightOf="@+id/localvertical_guideline1"
        app:layout_constraintBottom_toBottomOf="@+id/localhorizontal_guideline1"
        android:onClick="onSnapChat"
        />

    <ImageButton
        android:id="@+id/button1"
        android:background="@android:color/transparent"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="11dp"
        android:layout_marginLeft="8dp"
        android:text="" />

    <ImageButton
        android:id="@+id/button2"
        android:background="@android:color/transparent"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="" />

    <android.support.constraint.Guideline
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:id="@+id/localvertical_guideline"
        app:layout_constraintGuide_begin="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25"/>

    <android.support.constraint.Guideline
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:id="@+id/localhorizontal_guideline"
        app:layout_constraintGuide_begin="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3"/>


    <android.support.constraint.Guideline
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:id="@+id/localvertical_guideline1"
        app:layout_constraintGuide_begin="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <android.support.constraint.Guideline
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:id="@+id/localhorizontal_guideline1"
        app:layout_constraintGuide_begin="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.43"/>

</android.support.constraint.ConstraintLayout>
